@using My_Wedding_Manager.ViewModels
@model TableListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TableView</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <style type="text/css">
        a:hover {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row align-items-center">
        <div class="col">
            
        </div>
        <div class="col-6 align-self-center">
        @foreach (TableViewModel t in Model.Table)
        {
            <h6>Table @t.TableNo</h6>
            <a data-toggle="collapse" href="#TableGuest-@t.TableNo">
                <div class="progress" style="height: 40px">
                    @if (t.Percentage > 59)
                    {
                        <div class="progress-bar bg-dark" role="progressbar" style="width: @t.Percentage.ToString()%; height: 40px;"><h6>@t.Percentage.ToString() %</h6></div>
                    }
                    else
                    {
                        <div class="progress-bar bg-secondary" role="progressbar" style="width: @t.Percentage.ToString()%; height: 40px;"><h6>@t.Percentage.ToString() %</h6></div>
                    }
                </div>
            </a>
            <p>
                <div class="collapse" id="TableGuest-@t.TableNo">
                    <div class="card card-body">
                        @foreach (TableGuestViewModel tg in t.TableGuest)
                        {
                            if (tg.Attendance)
                            {
                                <div class="text-dark font-weight-bold"> @tg.GuestId - @tg.Name</div>
                            }
                            else
                            {
                                <div class="text-secondary"> @tg.GuestId - @tg.Name</div>
                            }
                        }
                    </div>
                </div>
            </p>
        }
        </div>
        <div class="col">
            
        </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.2.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
